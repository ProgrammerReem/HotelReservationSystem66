@using HotelReservationSystem.ViewModel.PageContent
@model DashboardVM

@{
    var labels = string.Join(",", Model.hotelUser.Select(h => $"\"{h.Date.ToString("MMM d")}\""));
    var data = string.Join(",", Model.hotelUser.Select(h => h.UserCount));
    var maxUserCount = Model.hotelUser.Any() ? Model.hotelUser.Max(h => h.UserCount) + 10 : 10;
}

@{
    ViewData["Title"] = "Room Creation Chart";
}

<link href="~/AdminDashboard/css/styles.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.7.1/css/buttons.dataTables.min.css">
<script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

<h2>@ViewData["Title"]</h2>


<div class="d-flex row">
    <!--Bar Chart-->


    <div class="col-lg-6">
        <div class="card mb-4 h-100">
            <div class="card-header">
                <i class="fas fa-chart-bar me-1"></i>
                Count Of Room Created
            </div>
            <div class="card-body"><canvas id="myBarChart" width="100%" height="50"></canvas></div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
    </div>

    <!--Line Chart-->
    <div class="col-lg-6 ">
        <div class="card mb-4 h-100">
            <div class="card-header">
                <i class="fas fa-chart-area me-1"></i>
                Count Of Users in Hotel
            </div>
            <div class="card-body"><canvas id="myAreaChart" width="100%" height="30"></canvas></div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
    </div>


</div>


<br />
<br />
<hr />
<div>
    <label>User Count :</label>
    <p>@Model.UserCount</p>
    <br />
    <label>Booked Rooms Count :</label>
    <p>@Model.BookedRoomsCount</p>
    <br />
    <label>Available Rooms Count :</label>
    <p>@Model.AvailableRoomsCount</p>
    <br />
</div>

<br />
<br />
<hr />


<div class="col-lg-6">
    <div class="card mb-4 h-100">
        <div class="card-header">
            <i class="fas fa-chart-bar me-1"></i>
            Benfet
        </div>
        <div class="card-body"><canvas id="myBarChart2" width="100%" height="50"></canvas></div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>
</div>

<br />
<hr />

<h2> Benefits Report</h2>
<form method="post">
    <label for="month">Select Month:</label>
    <input type="month" name="month">
    <input type="number" name="year" for="year" placeholder="Year.." />
    <button type="submit">Filter</button>


</form>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Month
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>HotelName</th>
                    <th>BenefitCount</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>HotelName</th>
                    <th>BenefitCount</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model.reportDateMonth)
                {
                    <tr>
                        <td>@item.HotelName</td>
                        <td>@item.BenefitCount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>





@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.1/js/buttons.html5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.68/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.68/vfs_fonts.js"></script>

    <script>
        $(document).ready(function () {
            $('#datatablesSimple').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copyHtml5',
                    'excelHtml5',
                    'csvHtml5',
                    'pdfHtml5'
                ]
            });
        });
    </script>

    <!-- Bar Chart -->
    <script>
        var ctx = document.getElementById("myBarChart");
        var myBarChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.roomCreations.Select(d => d.Date.ToString("yyyy-MM-dd")))),
                datasets: [{
                    label: "Revenue",
                    backgroundColor: "rgba(2,117,216,1)",
                    borderColor: "rgba(2,117,216,1)",
                    data: @Html.Raw(Json.Serialize(Model.roomCreations.Select(d => d.Count))),
                }],
            },
            options: {
                scales: {
                    xAxes: [{
                        time: {
                            unit: 'month'
                        },
                        gridLines: {
                            display: false
                        },
                        ticks: {
                            maxTicksLimit: 6
                        }
                    }],
                    yAxes: [{
                        ticks: {
                            min: 0,
                            max: 10,
                            maxTicksLimit: 5
                        },
                        gridLines: {
                            display: true
                        }
                    }],
                },
                legend: {
                    display: false
                }
            }
        });
    </script>

    <!-- Bar Chart 2 -->
    <script>
        var ctx = document.getElementById("myBarChart2");
        var myBarChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.ReportChart.Select(d => d.Month))),
                datasets: [{
                    label: "Revenue",
                    backgroundColor: "rgba(2,117,216,1)",
                    borderColor: "rgba(2,117,216,1)",
                    data: @Html.Raw(Json.Serialize(Model.ReportChart.Select(d => d.BenefitCount))),
                }],
            },
            options: {
                scales: {
                    x: {
                        type: 'category',
                        labels: @Html.Raw(Json.Serialize(Model.ReportChart.Select(d => d.Month))),
                        grid: {
                            display: false
                        },
                        ticks: {
                            maxTicksLimit: 6
                        }
                    }
                    ,


                    yAxes: [{
                        ticks: {
                            min: 0,
                            maxTicksLimit: 5
                        },
                        gridLines: {
                            display: true
                        }
                    }],
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
    </script>


    <!-- Line Chart -->
    <script>
        var ctx = document.getElementById("myAreaChart");
        var myLineChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: [@Html.Raw(labels)],
                datasets: [{
                    label: "Users",
                    lineTension: 0.3,
                    backgroundColor: "rgba(2,117,216,0.2)",
                    borderColor: "rgba(2,117,216,1)",
                    pointRadius: 5,
                    pointBackgroundColor: "rgba(2,117,216,1)",
                    pointBorderColor: "rgba(255,255,255,0.8)",
                    pointHoverRadius: 5,
                    pointHoverBackgroundColor: "rgba(2,117,216,1)",
                    pointHitRadius: 50,
                    pointBorderWidth: 2,
                    data: [@Html.Raw(data)],
                }],
            },
            options: {
                scales: {
                    xAxes: [{
                        time: {
                            unit: 'date'
                        },
                        gridLines: {
                            display: false
                        },
                        ticks: {
                            maxTicksLimit: 7
                        }
                    }],
                    yAxes: [{
                        ticks: {
                            min: 0,
                            max: @maxUserCount,
                            maxTicksLimit: 5
                        },
                        gridLines: {
                            color: "rgba(0, 0, 0, .125)",
                        }
                    }],
                },
                legend: {
                    display: false
                }
            }
        });
    </script>
}


