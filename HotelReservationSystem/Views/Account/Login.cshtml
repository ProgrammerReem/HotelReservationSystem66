@model UserVM
<h1>@ViewData["Title"]</h1>

@{
    Layout = "_CustomerLayout";

}
<style>
    .imgdiv {
        background-size: 100% 100%;
    }

    .loginimg {
        height: auto;
        max-width: 100%;
    }

</style>

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row">
            <div class="col-md-5">
                <form id="registerForm" method="post" enctype="multipart/form-data">
                    <h2>Create a new account.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    @{
                        if (ViewBag.error != null)
                        {
                            <p style="color:red"> @ViewBag.error</p>
                        }
                    }

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" autocomplete="phone" aria-required="true" placeholder="Email" />
                        <label asp-for="Email">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>


                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Password">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>


                </form>
            </div>
            <div class="col-md-6 col-md-offset-2">
                <section>
                    <div class="imgdiv">
                        <img class="loginimg" src="~/WebImgs/login@4x.png" />
                    </div>

                </section>
            </div>
        </div>

    </div>
</section>